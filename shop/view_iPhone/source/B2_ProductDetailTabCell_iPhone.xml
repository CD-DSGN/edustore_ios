<?xml version="1.0" encoding="utf-8" ?>
<ui namespace="B2_ProductDetailTabCell_iPhone">
    <row class="container">
        <image class="container-bg"/>
        
        <row class="button-star-wrapper">
            <button id="favorite" class="button-star"></button>
        </row>
        
		<button id="buy" class="btn button-orange">@{gooddetail_buy}</button>
        <button id="add" class="btn button-red">@{gooddetail_shoppingcart}</button>
		
        <col class="cart-wrapper">
            <button id="cart" class="cart-icon"/>
			<col class="badge-wrapper" id="badge-wrapper">
				<image id="badge-bg" class="badge-bg"/>
				<label id="badge" class="badge-number"/>
			</col>
        </col>
    </row>
    
    <style type="text/css">
        .container {
            width: 100%;
            height: 100%;
            v-align: center;
        }
        
        .container-bg  {
            image: url(footer_bg.png);
            image-insets: 0 25;
            image-mode: fit;
            position: absolute;
            left: 0;
            top: 0;
		}
        
        .button-star-wrapper {
            position: relative;
            width: 10%;
            height: 100%;
            v-align: center;
        }
        
        .button-narrow-red {
        height: 23px;
        line-height: 23px;
        background-image: url(button_narrow_red.png);
        }
        
        .button-narrow-blue {
        height: 23px;
        line-height: 23px;
        background-image: url(button_narrow_blue.png);
        }
        
        .button-narrow-orange {
        height: 23px;
        line-height: 23px;
        background-image: url(button_narrow_orange.png);
        }
        
        .button-large-red {
        width: 182px;
        height: 33px;
        background-image: url(button_large_red.png);
        font-size: 15px;
        line-height: 33px;
        }
        
        
        
        .cart-icon {
        position: absolute;
        width: 35px;
        height: 35px;
        left: 30%;
        top: 10%;
        image: url(footer_shopping_cart_icon.png);
        }
        
		.badge-wrapper {
        width: auto;
        height: 15px;
        position: absolute;
        left: 50px;
        top: 6px;
		}
		
		.badge-bg {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
        image-src: url(search_new_shopping_cart_num_bg.png);
		}
        
		.badge-number {
        width: auto;
        height: 100%;
        color: white;
        margin-left: 8px;
        margin-right: 8px;
        font-size: 10px;
        font-weight: bold;
        text-align: center;
		}
        
        .button-star {
            left: 0;
            width: 80%;
            height: 27px;
            button-image: url(item_info_disabled_btn.png);
            button-image-selected: url(item_info_pushed_collect_btn.png);
        }
        
        .btn {
            font: 11px bold;
            text-align: center;
            color: #fff;
            width: 30%;
            height: 28px;
            line-height: 28px;
            background-mode: stretch;
        }
        
        .button-red {
            background-image: url(button_red.png);
            width: 28%;
        }
        
        .button-blue {
            background-image: url(button_blue.png);
        }
        
        .button-orange {
            background-image: url(button_orange.png);
            width: 28%;
        }
        
        #buy {
        left: 0;
        }
        
        #add {
        left: 0;
        }
        
        .cart-wrapper {
            margin-left: 0;
            width: 25%;
            height: 44px;
            align: center;
        }
        
    </style>
</ui>
