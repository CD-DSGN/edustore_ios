<?xml version="1.0" encoding="UTF-8"?>
<ui namespace="K0_NewsCell">
    
    <row>
        <image class="background"/>
        <image class="news-image" id="news-image" />
            
            <label class="news-type" id="news-type"></label>
        <linear class="news-content">
            
            <label class="news-name" id="news-name"></label>
            
            

            <label class="content" id="content"></label>

        </linear>
        <row class="time">
            <label class="create_time" id="create_time"></label>
        </row>
    </row>
    
    <style>
        
        .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 98%;
        background-color: #fff;
        }
        
        .news-head {
        position: relative;
        top: 0px;
        left: 0px;
        width: 30%;
        height: auto;
        }
        
        .news-content {
        
        top: 0px;
        margin-left: 0px;
        bottom: 0px;
        width: 70%;
        height: 100px;
        background-color: #00ff00;
        }

        .news-image {
        position:relative;
        top: 5;
        left: 5px;
        width: 30%;
        height: auto;
        image-mode: fill;
        border-width: 2px;
        border-color: #fff;
        image-src: url();
        }
        
        .news-name {
        top: 10px;
        margin-left: 10px;
        width: 91%;
        line-num: 2;
        height: auto;
        font-size: 16px;
        color: #000000;
        }
        
        .content {
        left: 10px;
        top:8px;
        width: 93%;
        height: auto;
        line-num: 2;
        font: 14px;
        color: #555555;
        }
        
        
        .news-type {
        position:absolute;
        bottom: 10px;
        right: 5%;
        width:auto;
        height: auto;
        font: 14px;
        color: #fff;
        background-color: #000;
        border-radius: 2px;
        }
        
        .time {
        position: absolute;
        bottom: 0px;
        left: 12px;
        width: auto;
        height: 25px;
        }
        
        .create_time {
        top: 0px;
        left: 0px;
        width: auto;
        height: 100%;
        color: #999999
        }
    </style>
</ui>
